<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile3003" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/space</item>
        <item name="colorSecondaryVariant">@color/navy</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/space</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:editTextColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
<!--        <item name="android:editTextBackground">@android:color/transparent</item>-->
    </style>
    <style name="Theme.Mobile3003.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Mobile3003.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Mobile3003.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>